<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center">
	<TextView android:id="@+id/txt_question" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0+0 = " android:textSize="30sp" android:textColor="#FF0E5D70"
		/>
	<EditText android:id="@+id/txt_answer" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:hint="정답" android:inputType="numberDecimal" />
</LinearLayout>