<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#ffffffff" android:paddingTop="20dip" android:paddingBottom="20dip" >
		<ImageButton android:background="@drawable/default_icon_12"
			android:id="@+id/btn_alarm" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_centerHorizontal="true" />
		<Button android:text="미리보기" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/btn_preview"
			android:layout_toRightOf="@+id/btn_alarm" android:layout_alignBottom="@id/btn_alarm"/>
	</RelativeLayout>
	<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/line" />
	
	<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:paddingTop="20dip" android:paddingBottom="20dip" android:paddingLeft="30dip">
				<TextView android:id="@+id/txt_time" android:text="00 : 00 오전" android:textSize="30sp" android:textColor="#ffffffff"
					android:layout_width="fill_parent" android:layout_height="wrap_content"/>
				<TimePicker android:id="@+id/pck_date" android:layout_height="wrap_content" android:layout_width="wrap_content" />
			</LinearLayout>
			<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/line" />
			
			<LinearLayout android:id="@+id/layout01" android:orientation="vertical" android:paddingTop="20dip" android:paddingBottom="20dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:paddingLeft="30dip" android:clickable="true">
				<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:text="알람 반복" android:textSize="30sp" android:textColor="#ffffffff"
						android:layout_width="wrap_content" android:layout_height="wrap_content"/>
					<TextView android:id="@+id/txt_repeat" android:text="(한번)" android:textSize="18sp" android:textColor="#ffffffff"
						android:layout_marginLeft="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_marginTop="10dip">
					<TextView android:id="@+id/txt_sunday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="일" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_monday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="월" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_tuesday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="화" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_wednesday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="수" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_thursday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="목" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_friday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="금" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_saturday"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="토" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
				</LinearLayout>
			</LinearLayout>
			
			<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/line" />
		
			<LinearLayout android:orientation="vertical" android:id="@+id/layout02"
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:clickable="true"
				android:paddingTop="20dip" android:paddingBottom="20dip" android:paddingLeft="30dip">
				<TextView android:text="알람 난이도" android:textSize="30sp" android:textColor="#ffffffff"
					android:layout_width="fill_parent" android:layout_height="wrap_content"/>
				<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_marginTop="10dip">
					<TextView android:id="@+id/txt_diff_hard"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="상" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_diff_normal"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="중" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
					<TextView android:id="@+id/txt_diff_easy"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="하" android:textSize="18sp" android:textColor="#ff666666" android:layout_marginLeft="10dip"/>
				</LinearLayout>
			</LinearLayout>
			
			<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/line" />
		
			<Button android:id="@+id/btn_ok" android:text="알람 설정하기"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginTop="0dip" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
