<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/layout_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" 
		android:layout_marginTop="10dip" android:layout_alignParentBottom="true" >
		<Button android:layout_width="fill_parent" android:id="@+id/btn_ok" android:text="확인" android:layout_height="wrap_content"
    		android:layout_weight="1"/>
    	<Button android:layout_width="fill_parent" android:id="@+id/btn_cancle" android:text="취소" android:layout_height="wrap_content"
    		android:layout_weight="1"/>
    </LinearLayout>
	<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/layout_bottom">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
			<LinearLayout android:id="@+id/layout01" android:orientation="vertical" android:paddingTop="20dip" android:paddingBottom="20dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:paddingLeft="10dip" android:paddingRight="10dip" android:clickable="true">
				<RadioGroup android:id="@+id/chk_repeat" android:layout_width="fill_parent" android:layout_height="wrap_content">
					<RadioButton android:id="@+id/chk_once" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="한번"/>
					<RadioButton android:id="@+id/chk_day" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="매일"/>
					<RadioButton android:id="@+id/chk_week" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="매주"/>
				</RadioGroup>
			</LinearLayout>
			<ImageView android:layout_height="wrap_content" android:background="@drawable/line" android:layout_width="fill_parent" />
	
			<LinearLayout android:id="@+id/layout02" android:orientation="vertical" android:paddingTop="20dip" android:paddingBottom="20dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:paddingLeft="10dip" android:paddingRight="10dip" android:clickable="true">
				<TextView android:text="알람 반복" android:textSize="30sp" android:textColor="#ffffffff"
					android:layout_width="wrap_content" android:layout_height="wrap_content"/>
				
				<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_marginTop="10dip">
					<Button android:id="@+id/btn_sunday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="일" android:layout_marginLeft="5dip" android:layout_weight="1"/>
					<Button android:id="@+id/btn_monday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="월" android:layout_marginLeft="5dip" android:layout_weight="1"/>
					<Button android:id="@+id/btn_tuesday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="화" android:layout_marginLeft="5dip" android:layout_weight="1"/>
					<Button android:id="@+id/btn_wednesday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="수" android:layout_marginLeft="5dip" android:layout_weight="1"/>
					<Button android:id="@+id/btn_thursday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="목" android:layout_marginLeft="5dip" android:layout_weight="1"/>
					<Button android:id="@+id/btn_friday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="금" android:layout_marginLeft="5dip" android:layout_weight="1"/>
					<Button android:id="@+id/btn_saturday"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="토" android:layout_marginLeft="5dip" android:layout_weight="1"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
